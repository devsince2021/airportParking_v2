<body
  class="overflow-y-hidden relative flex justify-center items-center h-screen"
>
  <img
    src="/assets/parkinglot.jpg"
    class="w-screen absolute top-0"
    style="z-index: -1; opacity: 0.75"
  />

  <div
    class="w-1/3 rounded flex flex-col justify-center pt-10 pb-10 px-10"
    style="background-color: #3d3d3c"
  >
    <div class="text-2xl pb-10 text-white self-center">주차대행 관리</div>
    <form
      class="flex flex-col h-full"
      action="/login"
      method="post"
      id="form__login"
    >
      <input
        class="mb-5 rounded p-3"
        id="form__id"
        placeholder="아이디를 입력해주세요"
        name="userId"
      />
      <input
        class="mb-5 rounded p-3"
        id="form__password"
        placeholder="비밀번호를 입력해주세요"
        name="password"
      />
      <% if (message) { %>
      <div id="fail__message" class="text-lg pb-10 text-red-500 self-center">
        <%= message %>
      </div>
      <% } else { %>
      <div class="mb-5"></div>
      <% } %>

      <button class="text-lg p-3 bg-yellow-100 rounded" type="submit">
        로그인하기
      </button>
    </form>
  </div>
  <script>
    const idInput = document.getElementById('form__id');
    const pwInput = document.getElementById('form__password');
    const message = document.getElementById('fail__message');

    const deleteMessage = () => {
      if (message.innerText) message.innerText = '';
    };

    idInput.addEventListener('change', deleteMessage);
    pwInput.addEventListener('change', deleteMessage);
  </script>
</body>
